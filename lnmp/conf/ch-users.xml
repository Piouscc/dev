			<password_sha256_hex>1837bc2c546d46c705204cf9f857b90b1dbffd2a7988451670119945ba39a10b</password_sha256_hex>
			<quota>default</quota>
			<profile>stat</profile>
			<networks incl="networks" replace="replace">
				<ip>::/0</ip>
			</networks>
			<allow_databases>
				<database>stat67</database>
			</allow_databases>
		</stat67>
		
		<stat67ro>
			<password_sha256_hex>1837bc2c546d46c705204cf9f857b90b1dbffd2a7988451670119945ba39a10b</password_sha256_hex>
			<quota>default</quota>
			<profile>stat67ro</profile>
			<networks incl="networks" replace="replace">
				<ip>::/0</ip>
			</networks>
			<allow_databases>
				<database>stat67</database>
			</allow_databases>
		</stat67ro>

		<default>
